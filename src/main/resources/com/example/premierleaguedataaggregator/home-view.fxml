<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextAlignment?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.premierleaguedataaggregator.HomeController"
           stylesheets="@styles.css"
           styleClass="home-page"
           prefWidth="800" prefHeight="600">

    <!-- The background is handled by the .root style in CSS -->

    <!-- Content Container -->
    <VBox alignment="CENTER" spacing="20.0" styleClass="content-box" maxWidth="600" maxHeight="500">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>

        <!-- Premier League Logo -->
        <ImageView fitHeight="150.0" fitWidth="150.0" preserveRatio="true" styleClass="logo-icon">
            <image>
                <Image url="https://upload.wikimedia.org/wikipedia/en/thumb/f/f2/Premier_League_Logo.svg/1200px-Premier_League_Logo.svg.png"/>
            </image>
        </ImageView>

        <Label text="Premier League&#10;Data Aggregator" styleClass="title-label" textAlignment="CENTER"/>

        <Label text="The ball makes us dream."
               styleClass="slogan-label" wrapText="true" textAlignment="CENTER"/>

        <Button text="LOGIN" onAction="#onEnterButtonClick" styleClass="button"/>
    </VBox>
</StackPane>
